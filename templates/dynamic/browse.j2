{% extends "templates/partials/base.j2" %}
{% block title %}Blättern{% endblock title %}
{% block page_description %}
<meta name="description" content="Blättern">
{% endblock page_description %}
{% block scriptHeader %}
<link href="https://unpkg.com/tabulator-tables/dist/css/tabulator.min.css" rel="stylesheet">
<script type="text/javascript" src="https://unpkg.com/tabulator-tables/dist/js/tabulator.min.js"></script>
<link href="https://unpkg.com/tabulator-tables@5.5.0/dist/css/tabulator_bootstrap5.min.css" rel="stylesheet">
{% endblock scriptHeader %}

{% block content %}
<div class="container">
    <h1 class="text-center">Blättern</h1>
    <div>
        <table class="table" id="tabulator-table">
            <thead>
                <th tabulator-headerFilter="input">Mappe</th>
                <th tabulator-formatter="html" tabulator-headerFilter="input">Titel</th>
                <th tabulator-formatter="html" tabulator-headerFilter="input">Signatur</th>
                <th tabulator-headerFilter="input">Seitenanzahl</th>
                
                <!-- <th>Faksimile</th> -->
            </thead>
            <tbody>
                {% for x in browse_data %}
                <tr>
                    <td>
                        {{ x.doc_id }}
                    </td>
                    <td>
                        <a href="{{ x.transkribus_id }}.html">{{ x.quote }}</a>
                    </td>
                    <td>
                        {{ x.metadata.Signatur}}
                    </td>
                    <td>
                        {{ x.nr_of_pages }}
                    </td>
                    
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock content %}
{% block scripts2 %}
<script>
    var table = new Tabulator("#tabulator-table", {
        layout: "fitColumns",
        height: 800
    });
</script>
{% endblock scripts2 %}